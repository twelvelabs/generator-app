{
    "editor.formatOnSave": true,
    "editor.rulers": [
        120
    ],
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "shellcheck.customArgs": [
        "--check-sourced",
        "--external-sources",
        "--source-path=SCRIPTDIR"
    ],
    "shellcheck.enable": true,
    "shellformat.useEditorConfig": true
}
